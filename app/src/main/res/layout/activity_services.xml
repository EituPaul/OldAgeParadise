<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
   android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="20dp">
     <TextView
         android:layout_marginTop="20dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="To get service request for any"
         android:layout_gravity="center"
         android:textSize="20sp"
         android:textColor="@color/black"></TextView>




    <androidx.cardview.widget.CardView
        android:id="@+id/Health_care"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_height="200dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:src="@drawable/medical_care_logo"
                app:shapeAppearanceOverlay="@style/roundedmedicalImage">
            </com.google.android.material.imageview.ShapeableImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/service_name1"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:gravity="center"></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/food_service"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:backgroundTint="#9E1976D2"

        app:cardCornerRadius="10dp"
        android:layout_marginTop="20dp"
       >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:src="@drawable/food"
                app:shapeAppearanceOverlay="@style/roundedmedicalImage">
            </com.google.android.material.imageview.ShapeableImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/service_name2"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:gravity="center"></TextView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/Counselling"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="10dp"

        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:src="@drawable/counselling"
                app:shapeAppearanceOverlay="@style/roundedmedicalImage">
            </com.google.android.material.imageview.ShapeableImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/service_name3"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:gravity="center"></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/Entertainment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:backgroundTint="#9E1976D2"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/entertainment"
                app:shapeAppearanceOverlay="@style/roundedmedicalImage">
            </com.google.android.material.imageview.ShapeableImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/service_name4"
                android:textColor="@color/black"
                android:paddingRight="5dp"
                android:textSize="25sp"

                android:gravity="center"></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
</ScrollView>