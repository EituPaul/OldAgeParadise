<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:fillViewport="true"
    tools:context=".MainActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="We Are For Seniors!"
          android:textSize="30sp"
          android:layout_gravity="center"
          android:textStyle="bold"
          android:textColor="#D32F2F"


         ></TextView>

      <com.google.android.material.imageview.ShapeableImageView
          android:layout_width="170dp"
          android:layout_height="200dp"
          android:src="@drawable/app_logo"
          android:layout_gravity="center"
          app:shapeAppearanceOverlay="@style/roundedmedicalImage">
      </com.google.android.material.imageview.ShapeableImageView>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="We provide services to the old age person who need quick services."
          android:textSize="20dp" android:textStyle="bold"
          android:paddingLeft="20sp"
          android:paddingRight="20sp"></TextView>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Our services are listed below.For get any service request for that service"
          android:textSize="20dp" android:textStyle="bold"
          android:paddingLeft="20sp"
          android:paddingRight="20sp"></TextView>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"

          android:layout_marginBottom="20dp">



       <LinearLayout
           android:layout_width="wrap_content"

           android:layout_height="wrap_content"
           android:orientation="horizontal">
         <androidx.cardview.widget.CardView
             app:cardCornerRadius="30dp"
             android:id="@+id/Health_care"
             android:layout_width="wrap_content"
             android:layout_height="200dp"
             android:backgroundTint="@color/white"
             android:layout_marginTop="20dp"

             >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

               <com.google.android.material.imageview.ShapeableImageView
                   android:layout_width="170dp"
                   android:layout_height="match_parent"
                   android:src="@drawable/medical_care_logo"
                   app:shapeAppearanceOverlay="@style/roundedmedicalImage"
                  >
               </com.google.android.material.imageview.ShapeableImageView>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Health Care"
                   android:textSize="10sp"
                   android:textColor="@color/black"
                   android:gravity="center"></TextView>

            </LinearLayout>
         </androidx.cardview.widget.CardView>
         <androidx.cardview.widget.CardView
             app:cardCornerRadius="30dp"
             android:id="@+id/food_service"
             android:layout_width="wrap_content"
             android:layout_height="200dp"
             android:backgroundTint="#970288D1"
             android:layout_marginTop="20dp"
             >

               <com.google.android.material.imageview.ShapeableImageView
                   android:layout_width="170dp"
                   android:layout_height="match_parent"
                   android:src="@drawable/food"
                   app:shapeAppearanceOverlay="@style/roundedmedicalImage">
               </com.google.android.material.imageview.ShapeableImageView>



         </androidx.cardview.widget.CardView>
       </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
            android:orientation="horizontal">
         <androidx.cardview.widget.CardView
             android:id="@+id/Counselling"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:backgroundTint="@color/white"
             app:cardCornerRadius="30dp"
             android:layout_marginTop="20dp">

               <com.google.android.material.imageview.ShapeableImageView
                   android:layout_width="170dp"
                   android:layout_height="match_parent"
                   android:src="@drawable/counselling"
                   app:shapeAppearanceOverlay="@style/roundedmedicalImage">
               </com.google.android.material.imageview.ShapeableImageView>



         </androidx.cardview.widget.CardView>
         <androidx.cardview.widget.CardView
             android:id="@+id/Entertainment"
             android:layout_width="wrap_content"
             android:layout_height="200dp"
             android:backgroundTint="#970288D1"
             app:cardCornerRadius="30dp"
             android:layout_marginTop="20dp">

               <com.google.android.material.imageview.ShapeableImageView
                   android:layout_width="150dp"
                   android:layout_height="match_parent"
                   android:src="@drawable/entertainment"
                   app:shapeAppearanceOverlay="@style/roundedmedicalImage">
               </com.google.android.material.imageview.ShapeableImageView>

         </androidx.cardview.widget.CardView>
      </LinearLayout>

         <Button
             android:layout_marginTop="20dp"
             android:id="@+id/request_any_service"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:backgroundTint="@color/white"
             android:textColor="@color/black"
             android:text="Request any service?"></Button>


      </LinearLayout>

   </LinearLayout>
</ScrollView>