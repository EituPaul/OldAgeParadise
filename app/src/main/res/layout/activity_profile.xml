<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:fillViewport="true"
    tools:context=".Profile">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Profile Data"
        android:background="@drawable/edittext_border_zit"
        android:padding="5dp"

        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:layout_marginTop="20dp"></TextView>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_marginTop="16dp"
        android:id="@+id/IVPreviewImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/profileimage"
       android:layout_gravity="center"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>
    <!--ImageView to preview the selected image-->
   <!-- <ImageView
        android:id="@+id/IVPreviewImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/BSelectImage"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"

        android:background="@drawable/profileimage"
        android:layout_marginEnd="16dp" />-->
    <Button
        android:id="@+id/BSelectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/black"
        android:text="SELECT IMAGE"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:textSize="18sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"

        android:padding="5dp"

        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:layout_marginTop="20dp"></TextView>

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/emailprofile"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:paddingLeft="30dp"
        android:layout_gravity="center"
        android:background="@drawable/edittext_border_zit"

        android:inputType="textEmailAddress"
        ></EditText>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="password"

        android:padding="5dp"

        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:layout_marginTop="20dp"></TextView>  >



    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/password_profile"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:paddingLeft="30dp"
        android:layout_gravity="center"
        android:background="@drawable/edittext_border_zit"

        android:inputType="numberPassword"
        ></EditText>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox"
        android:text="show/hide Password" />


    <Button
        android:id="@+id/go_to_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/black"
        android:text="Go to Home"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:textSize="18sp" />

    </LinearLayout>
</ScrollView>